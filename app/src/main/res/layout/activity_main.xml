<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.supinfo.whereiscage.MainActivity"
    android:weightSum="3">

    <TextView
        android:layout_margin="10dp"
        android:padding="10dp"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/username"
        android:background="@drawable/background"
        android:text="Nom du joueur :"
        android:visibility="gone"/>


    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_weight="2"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chooseMode"
            android:textSize="30dp"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/modeNormalBtn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="@string/normalMode"
            android:textColor="@color/colorPrimary"
            android:background="#F5F5F5"
            />

        <Button
            android:layout_marginTop="8dp"
            android:id="@+id/modeOneBtn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="@string/chronoModOne"
            android:textColor="#ffffff"
            android:background="@color/colorPrimary"/>

        <Button
            android:layout_marginTop="8dp"
            android:id="@+id/modeTwoBtn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#F5F5F5"
            android:textColor="@color/colorPrimary"
            android:text="@string/chronoModTwo"/>
    </LinearLayout>

</LinearLayout>
